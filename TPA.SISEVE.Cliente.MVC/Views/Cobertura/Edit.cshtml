@model TPA.SISEVE.Cliente.MVC.Models.CoberturaModel

@{
    ViewBag.Title = "Actualizar Cobertura";
}

<h2>Registrar Cobertura</h2>

<div class="row">
    <div class="col-md-4 col-lg-4">
        @using (Html.BeginRouteForm("Cobertura", new { action = "Edit" }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group @((ViewData.ModelState["ciasegid"] != null) ? "has-error" : "")">
                @Html.LabelFor(model => model.CiaSegId, "Compañía de Seguros", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.CiaSegId, Model.ListadoCiaSeg, "Seleccione Compañia de Seguros", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CiaSegId, null, new { @class = "help-block" })
            </div>

            <div class="form-group @((ViewData.ModelState["nombre"] != null) ? "has-error" : "")">
                @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese nombre.", maxlength = "100" })
                @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "help-block" })
            </div>
            
            <div class="form-group @((ViewData.ModelState["abreviatura"] != null) ? "has-error" : "")">
                @Html.LabelFor(model => model.Abreviatura, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Abreviatura, new { @class = "form-control", placeholder = "Ingrese abreviatura.", maxlength = "10" })
                @Html.ValidationMessageFor(model => model.Abreviatura, null, new { @class = "help-block" })
            </div>
    
            <div class="form-group @((ViewData.ModelState["estado"] != null) ? "has-error" : "")">
                @Html.LabelFor(model => model.Estado, new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Estado, Model.ListadoEstados, "Seleccione Estado", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Estado, null, new { @class = "help-block" })
            </div>

            <div>
                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Registrar Cobertura</button>
                <a href="@Url.RouteUrl("Cobertura", new { action = "Index" })" class="btn btn-danger"><i class="fa fa-close"></i> Cancelar</a>
            </div>
        }
    </div>
</div>
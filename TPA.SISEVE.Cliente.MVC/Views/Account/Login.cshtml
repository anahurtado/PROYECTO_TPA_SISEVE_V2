@model TPA.SISEVE.Cliente.MVC.Models.LoginModel

@{
    ViewBag.Title = "Iniciar Sesión";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Iniciar Sesión</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginRouteForm("Account", new { action = "Login" }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(model => model.DNI, new { @class = "form-control", placeholder = "Ingrese D.N.I.", autofocus = "autofocus" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DNI, null, new { @class = "help-block error" })
                    </div>
        
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control", placeholder = "Ingrese clave de acceso" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Contraseña, null, new { @class = "help-block error" })
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"><i class="fa fa-sign-in"></i> Iniciar Sesión</button>
                    </div>
                }

                <div>
                    @Html.RouteLink("Regresar al Inicio", "Home")
                </div>
            </div>
            
        </div>
    </div>
</div>
        

    


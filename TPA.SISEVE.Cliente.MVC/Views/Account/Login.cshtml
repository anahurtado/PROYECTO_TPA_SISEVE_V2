@model TPA.SISEVE.Cliente.MVC.Models.LoginModel

@{
    ViewBag.Title = "Iniciar Sesión";
}
<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <div class="panel panel-info">
            <div class="panel-heading">Iniciar Sesión</div>
            <div class="panel-body">
                @using (Html.BeginRouteForm("Account", new { action = "Login" }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(item => item.DNI, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            @Html.TextBoxFor(model => model.DNI, new { @class = "form-control", placeholder = "Ingrese D.N.I.", autofocus = "autofocus" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DNI, null, new { @class = "help-block error" })
                    </div>
        
                    <div class="form-group">
                        @Html.LabelFor(item => item.Contraseña, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control", placeholder = "Ingrese clave de acceso" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Contraseña, null, new { @class = "help-block error" })
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Iniciar Sesión</button>
                        <a href="@Url.RouteUrl("Home")" class="btn btn-danger"><i class="fa fa-home"></i> Regresar al Inicio</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>